{
  "manifest_version": 3,
  "name": "Company Status Checker",
  "version": "1.0",
  "description": "Checks the status of a company name and changes the color based on the API response.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png"
    }
  },
  "icons": {
    "16": "icons/favicon-16x16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
